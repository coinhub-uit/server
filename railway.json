{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "./Dockerfile",
    "watchPatterns": [
      "src/**",
      "nest-cli.json",
      "lib/**",
      "railway.json",
      "nixpacks.toml",
      "package*.json",
      "docker/railway.Dockerfile"
    ]
  },
  "deploy": {
    "startCommand": "node ./dist/src/main",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  }
}
